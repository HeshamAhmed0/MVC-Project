@model Employee
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Employee</h1>
<form asp-action="Delete">
    <div class="my-3">
        <label asp-for="Name" class="col-form-label"></label>
        <input asp-for="Name" class="form-control" readonly/>
    </div>
    <div class="my-3">
        <label asp-for="Age" class="col-form-label"></label>
        <input asp-for="Age" class="form-control" readonly/>

    </div>
    <div class="my-3">
        <label asp-for="Email" class="col-form-label"></label>
        <input asp-for="Email" class="form-control" readonly/>

    </div>
    <div class="my-3">
        <label asp-for="Address" class="col-form-label"></label>
        <input asp-for="Address" class="form-control" readonly />

    </div
    <div class="my-3">
        <label asp-for="Phone" class="col-form-label"></label>
        <input asp-for="Phone" class="form-control" />

    </div>
    <div class="my-3">
        <label asp-for="salary" class="col-form-label"></label>
        <input asp-for="salary" class="form-control" readonly/>

    </div>
    <div class="my-3">
        <label asp-for="HiringDate" class="col-form-label"></label>
        <input asp-for="HiringDate" class="form-control" readonly/>

    </div> 
    <div class="my-3">
        <label asp-for="CreateAt" class="col-form-label"></label>
        <input asp-for="CreateAt" class="form-control"readonly />
    </div> 
    <div class="my-3">
        <label asp-for="IsActive" class="form-check"></label>
        <input asp-for="IsActive" class="col-form-label"readonly />
    </div> 
    <div class="my-3">
        <label asp-for="IsDeleted" class="form-check"></label>
        <input asp-for="IsDeleted" class="col-form-label" readonly/>
    </div>
    <div class="my-3">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="GetAll" asp-controller="Employee" class="btn btn-secondary">Back To List</a>
    </div>
</form>