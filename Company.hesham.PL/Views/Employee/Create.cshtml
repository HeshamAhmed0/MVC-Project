@model Employee
@{
    ViewData["Title"] = "Create";
}

<h1>Create Employee</h1>
<br />
<br />
<form asp-action="Create">
    <div class="my-3">
        <label asp-for="Name" class="col-form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="my-3">
        <label asp-for="Age" class="col-form-label"></label>
        <input asp-for="Age" class="form-control" />
        <span asp-validation-for="Age"></span>

    </div>
    <div class="my-3">
        <label asp-for="Email" class="col-form-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email"></span>

    </div>
    <div class="my-3">
        <label asp-for="Address" class="col-form-label"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address"></span>

    </div
    <div class="my-3">
        <label asp-for="Phone" class="col-form-label"></label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone"></span>

    </div>
    <div class="my-3">
        <label asp-for="salary" class="col-form-label"></label>
        <input asp-for="salary" class="form-control" />
        <span asp-validation-for="salary"></span>

    </div>
    <div class="my-3">
        <label asp-for="HiringDate" class="col-form-label"></label>
        <input asp-for="HiringDate" class="form-control" />
        <span asp-validation-for="HiringDate"></span>

    </div> 
    <div class="my-3">
        <label asp-for="CreateAt" class="col-form-label"></label>
        <input asp-for="CreateAt" class="form-control" />
        <span asp-validation-for="CreateAt"></span>
    </div> 
    <div class="my-3">
        <label asp-for="IsActive" class="form-check"></label>
        <input asp-for="IsActive" class="col-form-label" />
    </div> 
    <div class="my-3">
        <label asp-for="IsDeleted" class="form-check"></label>
        <input asp-for="IsDeleted" class="col-form-label" />
    </div>
    <div class="my-3">
        <input type="submit" value="Create" class="btn btn-primary" />
        <a asp-action="GetAll" asp-controller="Employee" class="btn btn-secondary">Back To List</a>
    </div>
</form>


