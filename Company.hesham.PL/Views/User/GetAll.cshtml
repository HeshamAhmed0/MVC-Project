@model IEnumerable<UserToResult>
@{
    ViewData["Title"] = "GetAll";
}



<h1> Users</h1>





<form >
    <div class="container m-4">
       <div class="row justify-content-center">
           <div class="col-6">
                <input id="EmployeeNameSearch" placeholder="Search By Name" name="SearchInput" class="form-control" />
           </div>
           <div class="col-6">
                <input type="submit" class="btn btn-primary" value="Search" />
           </div>
       </div>
    </div>
</form>





<br />
<br />
<table class="table table-hover table-striped">
    @if(Model.Count()>0){
        <thead>
            <th>FirstName</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Roles</th>
           
           
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.Email</td>
                    <td>
                        @foreach(var role in item.Roles){
                            <span>@role</span>
                        }
                    </td>
                    
                    <partial name="ButtonPartialView" model="@item.Id"></partial>
                </tr>
                }
       </tbody>
   }else{
       <div>
           <p>Ther is No User</p>
</div>
   }
</table>

