@model List<UserRoleToResult>
@{
    ViewData["Title"] = "AddOrRemoveRole";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
    var RoleId = ViewData["RoleId"] as string;
}

<h1>AddOrRemoveRole</h1>
<form asp-action="AddOrRemoveRole" asp-route-roleId="@RoleId">

    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="form-control">
            <input asp-for="@Model[i].IsAdded" />
            <label asp-for="@Model[i].IsAdded">@Model[i].Name</label>
        </div>
        <input type="hidden" asp-for="@Model[i].Id" />
        <input type="hidden" asp-for="@Model[i].Name" />
    }
    <input type="submit" value="Update" class="btn btn-primary" />
    <a asp-action="Edit" asp-route-id="@RoleId" class="btn btn-danger">Cancle</a>
</form>