@model IEnumerable<RoleToResult>
@{
    ViewData["Title"] = "GetAll";
}



<h1> Roles</h1>





<form >
    <div class="container m-4">
       <div class="row justify-content-center">
           <div class="col-6">
                <input id="EmployeeNameSearch" placeholder="Search By Name" name="SearchInput" class="form-control" />
           </div>
           <div class="col-6">
                <input type="submit" class="btn btn-primary" value="Search" />
           </div>
       </div>
    </div>
</form>



<a asp-action="Create" asp-controller="Role" class="btn btn-primary">Create Role</a>


<br />
<br />
<table class="table table-hover table-striped">
    @if(Model.Count()>0){
        <thead>
            <th>Id</th>
            <th>Name</th>
           
           
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                   
                    
                    <partial name="ButtonPartialView" model="@item.Id"></partial>
                </tr>
                }
       </tbody>
   }else{
       <div>
           <p>Ther is No Role</p>
</div>
   }
</table>

