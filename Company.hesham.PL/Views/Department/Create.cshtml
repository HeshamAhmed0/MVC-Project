@using Company.hesham.PL.Models
@model CreateDepartmentDto
@{
    ViewData["Title"] = "Create";
}

<h1>Create Department</h1>
<br />
<br />
<form asp-action="Create">
    <div class="mt-3">
        <label asp-for="Code" class="col-form-label"></label>
        <input asp-for="Code" class="form-control"/>
        <span asp-validation-for="Code"></span>
    </div> 
    <div class="mt-3">
        <label asp-for="Name" class="col-form-label"></label>
        <input asp-for="Name" class="form-control"/>
        <span asp-validation-for="Name"></span>

    </div>
    <div class="mt-3">
        <label asp-for="CreatenIn" class="col-form-label"></label>
        <input asp-for="CreatenIn" class="form-control"/>
        <span asp-validation-for="CreatenIn"></span>

    </div>
    <div class="mt-3">
        <input type="submit" value="Create" class="btn btn-primary"/>
        <a asp-action="GetAll" asp-controller="Department" class="btn btn-secondary">Back To List</a>
    </div>
</form>

