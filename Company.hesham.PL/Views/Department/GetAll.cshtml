
@model IEnumerable<Department>

@{
    ViewData["Title"] = "GetAll";
}

<h1>All Depaartment</h1>

<br />
<a asp-action="Create" asp-controller="Department" class="btn btn-primary">Create Department</a>
<table class="table table-hover table-striped">
    @if (Model.Count() > 0)
    {
        <thead>
        <th>Code</th>
        <th>Name</th>
        <th>Date Of Create</th>
        <th>Details</th>
        <th>Update</th>
        <th>Delete</th>
        </thead>
        <tbody>
            
                @foreach (var item in Model)
                {
                   <tr>
					<td>@item.Code</td>
					<td>@item.Name</td>
					<td>@item.CreatenIn</td>
					<td>
						<a  asp-route-id="@item.Id" asp-controller"Department" asp-action="Details" class="btn btn-primary">Details</a>
					</td>
					<td>
						<a  asp-controller"Department" class="btn btn-secondary" asp-route-id="@item.Id" asp-action="Edit">Update</a>
					</td>
					<td>
						<a  asp-controller"Department" class="btn btn-danger" asp-action="Edit">Delete</a>
					</td>
                   </tr>
                   
                }
            
        </tbody>
    }
    else
    {
        <div>
            <h4>
                There Is No Department :(
            </h4>
        </div>
    }
</table>



























