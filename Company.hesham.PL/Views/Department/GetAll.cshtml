
@model IEnumerable<Department>

@{
    ViewData["Title"] = "GetAll";
}





<form>
    <div class="container m-4">
        <div class="row justify-content-center">
            <div class="col-6">
                <input id="SearchById" placeholder="Search By Name" name="SearchInput" class="form-control" />
            </div>
            <div class="col-6">
                <input type="submit" class="btn btn-primary" value="Search" />
            </div>
        </div>
    </div>
</form>


<br>
<h1>All Depaartment</h1>

<br />
<a asp-action="Create" asp-controller="Department" class="btn btn-primary">Create Department</a>
<table class="table table-hover table-striped">
    @if (Model.Count() > 0)
    {
        <thead>
        <th>Code</th>
        <th>Name</th>
        <th>Date Of Create</th>
        <th>Details</th>
        <th>Update</th>
        <th>Delete</th>
        </thead>
        <tbody>
            
                @foreach (var item in Model)
                {
                   <tr>
					<td>@item.Code</td>
					<td>@item.Name</td>
                    <td>@item.CreateAt</td>
                    <partial name="ButtonPartialView" model="@item.Id.ToString()"></partial>

                </tr>
                   
                }
            
        </tbody>
    }
    else
    {
        <div>
            <h4>
                There Is No Department :(
            </h4>
        </div>
    }
</table>



























